<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.clapp.wheeltest.MainActivity">

    <studio.clapp.wheelpicker.WheelPicker
        android:id="@+id/dialog_class_time_picker__hour_picker"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:paddingStart="90dp"
        app:align="LEFT"
        app:layout_constraintEnd_toStartOf="@+id/dialog_class_time_picker__minute_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:selectedTextScale="1.2"
        app:textSize="42sp"
        app:wheelItemCount="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginStart="170dp"
        android:text="ч"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_class_time_picker__hour_picker" />

    <studio.clapp.wheelpicker.WheelPicker
        android:id="@+id/dialog_class_time_picker__minute_picker"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:paddingEnd="90dp"
        app:align="RIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_class_time_picker__hour_picker"
       app:selectedTextScale="1.2"
        app:textSize="42sp"
        app:wheelItemCount="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="70dp"
        android:text="м"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/dialog_class_time_picker__minute_picker"
        app:layout_constraintTop_toTopOf="@id/dialog_class_time_picker__minute_picker" />


</androidx.constraintlayout.widget.ConstraintLayout>