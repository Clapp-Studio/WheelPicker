<resources>

    <style name="BottomSheetDialog.Theme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Style</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/text_color_time_picker</item>
        <item name="textColor">@color/text_color_time_picker</item>
        <item name="selectedTextColor">@color/text_color_time_picker</item>
        <item name="android:windowBackground">@color/window_color_primary</item>
    </style>

    <style name="BottomSheet.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_top</item>
    </style>
</resources>